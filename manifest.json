{
	"manifest_version": 3,
	"name": "Bandcamp Stock Count",
	"version": "0.1.1",
	"icons": {
		"512": "bc_stock_512.png",
		"128": "bc_stock_128.png",
		"32": "bc_stock_32.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"script.js"
			],
			"matches": [
				"*://*/*"
			]
		}
	]
}